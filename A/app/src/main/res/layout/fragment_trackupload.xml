<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <at.markushi.ui.CircleButton
        android:id="@+id/btn_stopTrace"
        android:layout_width="86dip"
        android:layout_height="86dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dip"
        android:src="@drawable/ic_action_tick"
        app:cb_color="#FF4444"
        app:cb_pressedRingWidth="8dp"
        android:visibility="invisible"/>

    <at.markushi.ui.CircleButton
        android:id="@+id/btn_startTrace"
        android:layout_width="86dip"
        android:layout_height="86dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dip"
        android:src="@drawable/ic_action_tick"
        app:cb_color="#99CC00"
        app:cb_pressedRingWidth="8dp"/>

    <TextView
        android:id="@+id/tv_entityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:visibility="gone" />

    <Chronometer
        android:id="@+id/jishiqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        android:text="已用时间:0:00"
        android:layout_gravity="center"
        android:layout_below="@+id/tv_entityName"
        android:layout_centerHorizontal="true" />

</RelativeLayout>